{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Bag",
    "description": "Manage your online reading list with simplicity",
    "icons": { 
        "16": "icons/16.png",
        "19": "icons/19.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png" 
    },
    "action":{
        "default_icon": {
            "16": "icons/16.png",
            "19": "icons/19.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png" 
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ]
}